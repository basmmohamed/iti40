<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %> 
</p>
<p>
  <strong>Last update:</strong>
  <%= @post.updated_at %>
</p>
<% @comments.each do |comment| %>
  <div class="card md-12 mb-4" >
  <div class="card-body">
    <h6 class="card-text"><%= comment.content %></h6>
    <%= link_to 'Delete', comment, method: :delete %>
  </div>
</div>
<% end %>

<%= form_tag(post_comments_path , method: "post") do %>

  <div class="form_control">
  <%= text_area_tag(:content,nil,placeholder:"Content..",class:"form-control",rows: 5) %>
  </div>
  <%= submit_tag "Create Comment",class: "btn btn-success btn-block" %>

<% end %>


<%= link_to 'EDIT', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
