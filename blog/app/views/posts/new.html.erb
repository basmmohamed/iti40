<% if @post.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @post.errors.full_messages.each do |message|%>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_tag(posts_path, method: "post") do %>

    <div class="form_control">
    <%= text_field_tag(:title,nil,placeholder:"Title..",class:"form-control") %>
    </div>
    <div class="form_control">

    <%= text_area_tag(:content,nil,placeholder:"Content..",class:"form-control",rows: 10) %>
    </div>

    <%= submit_tag"Create",class: "btn btn-success btn-block" %>
  <% end %>
<%= link_to 'Back', posts_path %>
