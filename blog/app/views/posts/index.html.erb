<p id="notice"><%= notice %></p>

<h1>Posts</h1>


    <% @posts.each do |post| %>
      <div class="card md-12 mb-4" >
      <div class="card-body">
        <h5 class="card-title"><%= post.title %></h5>
        <h6 class="card-text"><%= post.updated_at %></h6>

        <h6 class="card-text"><%= post.content %></h6>
        <a href="<%= edit_post_path(post.id)%>" class="btn btn-primary">EDIT</a>
        <a href="<%= post_path(post.id)%>" class="btn btn-primary">Show</a>

        <%= link_to 'Delete', post, method: :delete %>
      </div>
    </div>
      
    <% end %>

<br>

<%= link_to 'New Post', new_post_path %>
